{
  "name": "gitty",
  "version": "1.0.0",
  "main": "electron/main.js",
  "description": "A powerful Git history editor - edit any previous commit without creating new commits",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "node scripts/kill-port.cjs 3080 5180 && concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:electron\"",
    "dev:server": "node scripts/kill-port.cjs 3080 && npm run dev --workspace=server",
    "dev:client": "node scripts/kill-port.cjs 5180 && npm run dev --workspace=client",
    "dev:electron": "wait-on http://localhost:5180 && electron .",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "dist": "npm run build && electron-builder",
    "start": "npm run start --workspace=server"
  },
  "keywords": [
    "git",
    "history",
    "editor",
    "rebase",
    "amend",
    "version-control"
  ],
  "author": "Tharka Karunanayake",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^23.0.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.gitty.app",
    "productName": "Gitty",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "server/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github",
      "owner": "YourGitHubUsername",
      "repo": "Gitty"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Gitty"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "simple-git": "^3.22.0"
  }
}